<%= hidden_field_tag "#{object}[#{field}][]", nil, id: 'hidden-value-template' %>
<div class="hidden-values">
  <% selected.each do |id| %>
    <%= hidden_field_tag "#{object}[#{field}][]", id, id: nil %>
  <% end %>
</div>
<% count = selected.size %>
<a class="tree-button" href="#" data-caption="<%= caption %>">
  <% if count == 0 %>
    <span><%=caption %></span>
  <% else %>
    <span class="selected"><%= count %></span>
  <% end %>
</a>
