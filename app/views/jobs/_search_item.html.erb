<div class="item <%= 'featured' if job.featured? %>">
  <div class="left-side logo">
    <%= link_to job.employer do %>
      <%= image_tag job.employer.logo ? job.employer.logo.thumb('70x70#') : 'dummy_logo.svg' %>
    <% end %>
  </div>
  <div class="content">
    <h1>
      <% if @search %>
        <%= link_to job.title, job_path(job, search_id: @search.token) %>
      <% elsif @location %>
        <%= link_to job.title, job_path(job, location: @location) %>
      <% elsif defined?(employer) %>
        <%= link_to job.title, employer_job_path(employer, job) %>
      <% else %>
        <%= link_to job.title, job %>
      <% end %>
    </h1>
    <p>
      <%= link_to job.employer.company_name, job.employer, class: 'company-name' %>
      <span class="location"><%= short_caption(job.location) %></span>
      <span class="date"><%= job.first_activated_at.to_date.to_formatted_s(:short_with_year) %></span>
    </p>
    <p>
      <% items = [] %>
      <% items << formatted_salary(job) if formatted_salary(job) %>
      <% items << employment_types_list(job) if employment_types_list(job).present? %>
      <%= items.join(', ') %>
    </p>
    <div class="controls">
      <ul>
        <% if logged_in? && current_user.job_seeker? %>
          <% if current_user.has_saved_job?(job) %>
            <li>Job is saved</li>
          <% else %>
            <li id="save-job-button-<%= job.id %>">
              <%= link_to 'Save Job', add_saved_jobs_path(job_id: job.id), class: 'fancybox fancybox.ajax' %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
