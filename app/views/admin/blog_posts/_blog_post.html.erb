<tr>
  <td><%= blog_post.title %></td>
  <td><%= blog_post.created_at.to_formatted_s(:long) %></td>
  <td>
    <%= link_to 'Edit', edit_admin_blog_post_path(blog_post), class: 'btn btn-primary btn-xs' %>
    <%= link_to "Comments ( #{blog_post.comments.length} )", admin_blog_post_comments_path(blog_post), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Delete', admin_blog_post_path(blog_post), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this blog post?' } %>
  </td>
</tr>
