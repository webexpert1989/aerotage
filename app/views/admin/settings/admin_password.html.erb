<%= form_tag admin_admin_password_path, class: 'form-horizontal' do %>

  <div class="form-group">
    <%= label_tag :current_password, 'Current Password', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4"><%= password_field_tag :current_password, nil, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'New Password', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4"><%= password_field_tag :password, nil, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation, 'New Password Confirmation', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4"><%= password_field_tag :password_confirmation, nil, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= submit_tag 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
