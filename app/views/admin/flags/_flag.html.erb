<tr>
  <% listing = flag.listing.specific %>
  <td><%= link_to listing.title, listing.job? ? admin_job_path(listing) : admin_resume_path(listing) %></td>
  <td><%= listing_activity_info(flag.listing) %></td>
  <td><%= link_to listing.user.display_name, listing.user.employer? ? admin_employer_path(listing.user) : admin_job_seeker_path(listing.user) %></td>
  <td><%= link_to flag.user.display_name, flag.user.employer? ? admin_employer_path(flag.user) : admin_job_seeker_path(flag.user) %></td>
  <td><%= flag.created_at.to_date %></td>
  <td><%= flag.flag_type.titleize %></td>
  <td><%= flag.comment %></td>
  <td>
    <%= link_to 'Remove Flag', admin_flag_path(flag), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to remove this flag?' } %>
    <%= link_to 'Delete Listing', listing.job? ? admin_job_path(listing) : admin_resume_path(listing), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this listing?' } %>
  </td>
</tr>
