<tr>
  <td><%= blog_post_comment.commenter.email %>
  <td class=<%= 'reply' if blog_post_comment.parent_comment) %>>
    <%= blog_post_comment.text %>
  </td>
  <td><%= blog_post_comment.created_at.to_formatted_s(:long) %></td>
  <td>
    <%= link_to 'Edit', edit_admin_blog_post_comment_path(blog_post_comment), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Delete', admin_blog_post_comment_path(blog_post_comment), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this comment?' } %>
  </td>
</tr>
<%= render blog_post_comment.replies %>
